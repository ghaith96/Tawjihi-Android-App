<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.AppCompat.Light.Dialog.Alert"
    android:textDirection="rtl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="عرض فقط:-"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المدارس"
            app:layout_constraintStart_toStartOf="parent" />

        <com.hootsuite.nachos.NachoTextView
            android:id="@+id/nacho_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipBackground="@color/colorPrimary"
            app:chipHeight="30dp"
            app:chipSpacing="2dp"
            app:chipTextSize="16dp"
            app:chipVerticalSpacing="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المناطق"
            app:layout_constraintStart_toStartOf="parent" />

        <com.hootsuite.nachos.NachoTextView
            android:id="@+id/nacho_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipBackground="@color/colorPrimary"
            app:chipHeight="30dp"
            app:chipSpacing="2dp"
            app:chipTextSize="16dp"
            app:chipVerticalSpacing="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السنوات"
            app:layout_constraintStart_toStartOf="parent" />

        <com.hootsuite.nachos.NachoTextView
            android:id="@+id/nacho_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipBackground="@color/colorPrimary"
            app:chipHeight="30dp"
            app:chipSpacing="2dp"
            app:chipTextSize="16dp"
            app:chipVerticalSpacing="3dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الفروع"
            app:layout_constraintStart_toStartOf="parent" />

        <com.hootsuite.nachos.NachoTextView
            android:id="@+id/nacho_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipBackground="@color/colorPrimary"
            app:chipHeight="30dp"
            app:chipSpacing="2dp"
            app:chipTextSize="16dp"
            app:chipVerticalSpacing="3dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/submit"
            style="@android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:elevation="4dp"
            android:text="حفظ" />

        <Button
            android:id="@+id/clear"
            style="@android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:elevation="4dp"
            android:text="مسح الحقول" />
    </RelativeLayout>

</LinearLayout>